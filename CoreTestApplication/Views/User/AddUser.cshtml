@{
    ViewData["Title"] = "Add New User";
}

@model CoreTestApplication.Models.UserModel;
<html>
<head>
    <script src="~/lib/jquery/dist/jquery.js"></script>
</head>
<body>
    <form asp-action="SaveNewUser">
        <div class="row">
            <div class="col-md-4" style="background-color:green">
                First Name
                <span class="text-danger">*</span>
                <input type="text" class="form-control" asp-for="FirstName" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                Last Name
                <span class="text-danger">*</span>
                <input type="text" class="form-control" asp-for="LastName" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                Email
                <span class="text-danger">*</span>
                <input type="text" class="form-control" asp-for="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

        </div>
        <div class="row" style="padding-top:25px">
            <div class="col-md-4">
                Mobile
                <input type="text" class="form-control" asp-for="Mobile" />
            </div>
            <div class="col-md-4">
                Gender
                <br />
                @*<div class="custom-control custom-radio custom-control-inline">
                        <input type="radio" id="customRadioInline1" name="customRadioInline" value="true" asp-for="Gender" class="custom-control-input">
                        <label class="custom-control-label" for="customRadioInline1">Male</label>
                    </div>
                    <br />
                    <div class="custom-control custom-radio custom-control-inline">
                        <input type="radio" id="customRadioInline2" name="customRadioInline" value="false" asp-for="Gender" class="custom-control-input">
                        <label class="custom-control-label" for="customRadioInline2">Female</label>
                    </div>*@
                <input type="radio" value="true" class="custom-radio" asp-for="Gender" />Yes
                <input type="radio" value="false" class="custom-radio" asp-for="Gender" />No

            </div>
            <div class="col-md-4">
                Comments
                <textarea class="form-control" asp-for="Comments" rows="3"></textarea>
            </div>
            <div class="col-md-4">
                Doctors
                <select id="DoctorList" class="form-control">
                    <option value="">Please Select</option>
                </select>
            </div>
        </div>
        <div class="row" style="padding-top:25px">
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary">Save User</button>
            </div>
        </div>

    </form>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }

    <script>
       // $(document).ready(function () {
          
        $.getJSON('GetAllDoctor', function (ssss) {
            $.each(ssss, function () {
                $("#DoctorList").append('<option value=' + this.doctorId + '>' + this.doctorName + '</option>')
            });
        });
       // });
    </script>
</body>
</html>