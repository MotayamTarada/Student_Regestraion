@{
}
@model CoreTestApplication.Models.UserModel;
<html>
<head>

</head>
<body>
    <form asp-action="Update">
        <div class="row">
            <div class="col-md-4">
                First Name
                <span class="text-danger">*</span>
                <input type="text" class="form-control" asp-for="FirstName" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                Last Name
                <span class="text-danger">*</span>
                <input type="text" class="form-control" asp-for="LastName" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                Email
                <span class="text-danger">*</span>
                <input type="text" class="form-control" asp-for="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

        </div>
        <div class="row" style="padding-top:25px">
            <div class="col-md-4">
                Mobile
                <input type="text" class="form-control" asp-for="Mobile" />
            </div>
            <div class="col-md-4">
                Gender
                <br />
              
                <input type="radio" value="true" class="custom-radio" asp-for="Gender" />Yes
                <input type="radio" value="false" class="custom-radio" asp-for="Gender" />No

            </div>
            <div class="col-md-4">
                Comments
                <textarea class="form-control" asp-for="Comments" rows="3"></textarea>
            </div>
        </div>
        <div class="row" style="padding-top:25px">
            <div class="col-md-4">
                <input type="hidden" asp-for="ID" />
                <button type="submit" class="btn btn-primary">Update User</button>
            </div>
        </div>

    </form>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>