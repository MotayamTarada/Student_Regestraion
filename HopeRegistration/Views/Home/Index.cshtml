    <script>
        $('.count').each(function () {
            $(this).prop('Counter', 1).animate({
                Counter: $(this).text()
            }, {
                duration: 1500,
                easing: 'swing',
                step: function (now) {
                    $(this).text(Math.ceil(now));
                }
            });
        });


    </script>
