@{
    ViewData["Title"] = "Get All Students";
}

@model List<HopeRegistration.Models.StudentModel>

<html>
<head>

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">

</head>
<body>
    <div class="row">
        <div class="col-md-12" style="text-align:center">
            <h3>Get All Students</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12" style="text-align:right">
            <a href="AddNewStudent" style="font-weight:bold; color:red">
            Add New Student</a>
        </div>
    </div>
  

    <table class="table table-striped" style="width:100%">
        <thead>
            <tr style="background-color:#8080807d">
                <th>First Name</th>
                <th>Last Name</th>
                <th>Gender</th>
                <th>Date of Birth</th>
                <th>Mobile</th>
                <th>Nationality Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (HopeRegistration.Models.StudentModel item in Model)
            {
                <tr>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.GenderDisplayName</td>
                    @if (@item.DateOfBirth.HasValue)
                    {
                        <td>@item.DateOfBirth.Value.ToString("dd/mm/yyyy")</td>
                    }
                    else
                    {
                        <td></td>
                    }

                    <td>@item.Mobile</td>
                    <td>@item.NationalityName</td>
                    <td>
                        <a asp-controller="Student" style="color:green; font-size:20px" asp-action="UpdateStudent" asp-route-Id="@item.StudentId" class="far fa-edit"></a>
                        <a asp-controller="Student" style="color:red; font-size:20px" asp-action="DeleteStudent" asp-route-Id="@item.StudentId" class="fas fa-trash-alt"></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</body>
</html>
